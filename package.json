{
  "name": "vscode-raml",
  "displayName": "RAML",
  "description": "RAML support for Visual Studio Code including preview.",
  "repository": "https://github.com/blzjns/vscode-raml",
  "version": "3.0.1",
  "publisher": "blzjns",
  "icon": "media/icon.png",
  "contributors": [
    "jeppeandersen",
    "blzjns"
  ],
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onLanguage:raml",
    "onCommand:raml.showPreview"
  ],
  "main": "./src/main",
  "contributes": {
    "languages": [
      {
        "id": "raml",
        "aliases": [
          "RAML",
          "raml",
          "Raml"
        ],
        "extensions": [
          ".raml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "raml",
        "scopeName": "source.raml",
        "path": "./syntaxes/raml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "raml",
        "path": "./snippets/raml.json"
      }
    ],
    "commands": [
      {
        "command": "raml.showPreview",
        "title": "Preview",
        "category": "RAML",
        "icon": {
          "dark": "./media/Preview.svg",
          "light": "./media/Preview_inverse.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == raml",
          "command": "raml.showPreview",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "editorLangId == raml",
          "command": "raml.showPreview",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "raml.showPreview",
        "key": "shift+ctrl+v",
        "mac": "shift+cmd+v",
        "when": "!terminalFocus && editorLangId == raml"
      }
    ],
    "configuration": {
      "title": "vscode-raml",
      "properties": {
        "raml.enableAutoCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable autocompletion/intellisense"
        },
        "raml.previewTheme": {
          "type": "string",
          "default": "dark",
          "description": "Theme for previewing the raml file. Options: dark, light"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "fs-extra": "^2.1.2",
    "raml-suggestions": "^0.0.29"
  },
  "devDependencies": {
    "typescript": "^1.8.7",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "eslint": "^3.6.0",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  }
}
